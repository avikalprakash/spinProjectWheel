<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context="com.ryan.luckywheel.MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#000000"
    android:id="@+id/relative">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:src="@drawable/logo"
        android:layout_marginLeft="20dp"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:textColor="#DCB42E"
    android:textSize="12dp"
    android:textStyle="bold"
    android:layout_marginRight="20dp"
    android:id="@+id/time"/>
</RelativeLayout>
    <rubikstudio.library.LuckyWheelView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:lkwBackgroundColor="#FF9800"
        app:lkwTextColor="#263238"
        app:lkwCenterImage="@drawable/wheel2"
        app:lkwCursor="@drawable/ic_cursor"
        android:id="@+id/luckyWheel"
        android:layout_below="@+id/relative"
        android:layout_width="260dp"
        android:layout_height="260dp" />

    <Button
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:text="Play"
        android:textStyle="bold"
        android:visibility="gone"
        android:background="#F44336"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/luckyWheel"
        android:layout_width="200dp"
        android:textAllCaps="false"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/luckyWheel"
        android:layout_marginTop="35dp"
        android:id="@+id/linear1"
        android:background="@drawable/btn1"
        android:orientation="vertical"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/live"
            android:text="Live"
            android:textStyle="bold"
            android:textColor="#DCB42E"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linear1"
        android:layout_marginTop="10dp"
        android:id="@+id/previousList"
        android:background="@drawable/btn1"
        android:orientation="vertical"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Previous List"
            android:textColor="#DCB42E"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/previousList"
        android:layout_marginTop="10dp"
        android:id="@+id/upcomingList"
        android:background="@drawable/btn1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Up coming"
            android:textColor="#DCB42E"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</RelativeLayout>
