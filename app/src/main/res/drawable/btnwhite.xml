<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ffffff" android:centerColor="#ffffff" android:endColor="#ffffff" android:angle="90"/>
            <corner android:radius="5dp"/>
            <stroke android:width="1dp" android:color="#F44336"/>
            <padding android:left="15dp" android:right="15dp" android:top="15dp" android:bottom="15dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#F44336" android:centerColor="#bc9842" android:endColor="#F44336" android:angle="90"/>
            <corner android:radius="5dp"/>
            <stroke android:width="1dp" android:color="#ffff"/>
            <padding android:left="15dp" android:right="15dp" android:top="15dp" android:bottom="15dp"/>
        </shape>
    </item>


</selector>